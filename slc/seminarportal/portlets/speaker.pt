<dl class="portlet portletSpeaker"
    i18n:domain="plone">

    <tal:speaker tal:define="speaker view/get_speaker"
                 tal:condition="nocall:speaker">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile" 
              i18n:translate="box_speaker">
                Featured Speaker
        </span>
        <span class="portletTopRight"></span>
    </dt>
    <dd class="portletItem"
        tal:define=" plone_view context/@@plone;
                    getIcon nocall:plone_view/getIcon;
                    item_icon python:getIcon(speaker);">
        <a href="#" rel="nofollow"
           class="tile"
           tal:attributes="href speaker/get_path;
                           title speaker/Description">
            <span tal:replace="speaker/pretty_title_or_id">
                Speaker Title 
            </span>
        </a>
        <div>
            <div style="float:left; padding:1em;">
                <img tal:attributes="src string:${speaker/get_path}/image_thumb"/>
            </div>
            <div tal:content="structure python:'<br/>'.join(speaker.getJobTitles())"/>
        </div>
        <br clear="all"/>
    </dd>
    </tal:speaker>
</dl>
