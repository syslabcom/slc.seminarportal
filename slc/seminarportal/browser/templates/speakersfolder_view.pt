<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
    <metal:border fill-slot="top_slot">
        <tal:border define="dummy python:request.set('enable_border',1)" />
    </metal:border>

    <metal:block fill-slot="javascript_head_slot">
        <script>
            var jq = jQuery.noConflict();
            jq(document).ready(function(){
                jq("div.big-target a").bigTarget({
                    clickZone : 'div:eq(0)' // jQuery parent selector
                });
            });
        </script>
    </metal:block>

    <metal:fill fill-slot="header">
        <h1>
            <tal:block replace="structure python:getattr(here, here.getIcon(1))"/>
            <span tal:replace="here/Title"/>
        </h1>
    </metal:fill>
</head>

<body>

<div metal:fill-slot="main">
    <a  href=""
        class="link-parent"
        tal:define="parent_url python:here.navigationParent(here.aq_parent, template.getId())"
        tal:condition="parent_url"
        tal:attributes="href parent_url">
        <span i18n:translate="label_seminar_link">View the seminar:</span>
        <tal:text replace="string:${here/seminar_title}"/>
    </a>
    <br clear="all"/>

    <p tal:content="here/Description"/>

    <tal:get define="speakers python:view.query_items('SPSpeaker');
                    batch speakers;">
        <tal:if_not condition="not: speakers">
            <h3>Add a new Speaker</h3>
            This folder does not contain any speakers at the moment,
            click the button below to add one.
            <form tal:attributes="action string:${here/absolute_url}/createObject">
                <input type="hidden" name="type_name" value="SPSpeaker"/>
                <input class="context" type="submit" value="Add a Speaker"/>
            </form>
        </tal:if_not>

        <tal:if condition="speakers">
            <div id="add-speaker">
                <strong>Add another Speaker</strong>
                <p>
                <form tal:attributes="action string:${here/absolute_url}/createObject">
                    <input type="hidden" name="type_name" value="SPSpeaker"/>
                    <input class="context" type="submit" value="Add a Speaker"/>
                </form>
                </p>
            </div>
            <br clear="all"/>
            <div metal:use-macro="here/batch_macros/macros/navigation" />
            <ul>
                <li tal:repeat="speaker speakers">
                    <tal:if condition="python:speaker.getObject().getImage()">
                        <img tal:attributes="src string:${speaker/getPath}/image_small" src=""/>
                    </tal:if>
                    <strong>
                        <a tal:attributes="href speaker/getPath" tal:content="speaker/pretty_title_or_id"/>
                    </strong>
                    <p class="formHelp" tal:content="speaker/Description"/>
                    <br clear="all"/>
                </li>
            </ul>
            <div metal:use-macro="here/batch_macros/macros/navigation" />
        </tal:if>
    </tal:get>
</div>
</body>
</html>

