<html xmlns="http://www.w3.org/1999/xhtml" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="p4a.calendar">

<head>
  <metal:block metal:fill-slot="head_slot">
  <style type="text/css" 
         media="all"
         tal:content=
          "string: @import url(${context/seminarportal.css});">
  </style>
  </metal:block>
</head>

<body>

<div metal:fill-slot="main">
    <h1 tal:content="string:All Speeches for Seminar: '${context/title_or_id}'">Title</h1>
    <tal:get define="venues view/get_venues;
                     venue_ids python:[v.id for v in venues];
                     summary python:view.get_event_summary(venues);">
        <div class="eventlist">
            <div class="eventlist_month" tal:repeat="date summary/keys">
            <h2>
                <tal:block content="python:view.get_datetime(date).strftime('%a %d %B %Y')"/> 
            </h2>
            <div class="event" tal:repeat="event_list python:sorted(summary[date])">
                <tal:def define="event python:event_list[2];
                                 time python:event_list[0]">
                    <div class="event_details">
                        <abbr class="dtstart" 
                            tal:attributes="title python:event.start.strftime('%a %d %B %Y')" 
                            i18n:translate="start_date">
                                <tal:block content="event/start/TimeMinutes"/>
                        </abbr>
                    </div>
                    <div class="event_body">
                        <a class="summary event_title" tal:content="event/Title"
                            tal:attributes="href event/get_path" />
                        <div class="location" tal:content="event/location | default">Location</div>
                        <div class="description" tal:condition="event/description" tal:content="event/description"/>
                    </div>
                </tal:def>
            </div>
            <div style="clear: both;"></div>
            </div>
        </div>
    </tal:get>
</div> 
</body>
</html>
